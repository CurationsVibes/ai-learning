---
interface Props {
  githubUrl?: string;
  repoPath?: string;
  hasLiveDemo?: boolean;
  demoUrl?: string;
  showCodePreview?: boolean;
  previewCode?: string;
  technologies?: string[];
}

const { 
  githubUrl, 
  repoPath, 
  hasLiveDemo, 
  demoUrl, 
  showCodePreview = false,
  previewCode,
  technologies = []
} = Astro.props;

// Generate GitHub URL if repo path provided
const fullGithubUrl = githubUrl || (repoPath ? `https://github.com/CurationsLA/ai-learning/tree/main/${repoPath}` : null);
const forkUrl = fullGithubUrl ? `${fullGithubUrl.split('/tree/')[0]}/fork` : null;
---

{fullGithubUrl && (
  <div class="cookbook-as-code">
    <div class="cac-header">
      <span class="cac-icon">üíª</span>
      <h4>Cookbook as Code</h4>
      {technologies.length > 0 && (
        <div class="cac-tech-tags">
          {technologies.map(tech => (
            <span class="tech-tag">{tech}</span>
          ))}
        </div>
      )}
    </div>
    <p class="cac-description">
      This cookbook includes runnable code examples. Fork, experiment, and build!
    </p>
    
    {showCodePreview && previewCode && (
      <details class="code-preview">
        <summary class="preview-toggle">
          <span class="toggle-icon">‚ñ∂</span>
          <span>Preview Code Snippet</span>
        </summary>
        <div class="preview-content">
          <pre><code>{previewCode}</code></pre>
        </div>
      </details>
    )}
    
    <div class="cac-buttons">
      <a href={fullGithubUrl} class="cac-button view" target="_blank" rel="noopener noreferrer">
        <span class="button-icon">
          <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
          </svg>
        </span>
        <span>View on GitHub</span>
      </a>
      {forkUrl && (
        <a href={forkUrl} class="cac-button fork" target="_blank" rel="noopener noreferrer">
          <span class="button-icon">üç¥</span>
          <span>Fork & Run</span>
        </a>
      )}
      {hasLiveDemo && demoUrl && (
        <a href={demoUrl} class="cac-button demo" target="_blank" rel="noopener noreferrer">
          <span class="button-icon">üöÄ</span>
          <span>Live Demo</span>
        </a>
      )}
      <button class="cac-button copy" data-copy-url={fullGithubUrl} title="Copy GitHub URL">
        <span class="button-icon">üìã</span>
        <span class="copy-text">Copy URL</span>
      </button>
    </div>
  </div>
)}

<script>
  // Handle copy button
  document.querySelectorAll('.cac-button.copy').forEach(button => {
    button.addEventListener('click', async () => {
      const url = button.getAttribute('data-copy-url');
      if (!url) return;
      
      try {
        await navigator.clipboard.writeText(url);
        const textSpan = button.querySelector('.copy-text');
        if (textSpan) {
          const originalText = textSpan.textContent;
          textSpan.textContent = '‚úì Copied!';
          setTimeout(() => {
            textSpan.textContent = originalText;
          }, 2000);
        }
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });

  // Handle details toggle animation
  document.querySelectorAll('.code-preview').forEach(details => {
    details.addEventListener('toggle', (e) => {
      const target = e.target as HTMLDetailsElement;
      const icon = target.querySelector('.toggle-icon');
      if (icon) {
        icon.textContent = target.open ? '‚ñº' : '‚ñ∂';
      }
    });
  });
</script>

<style>
  .cookbook-as-code {
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 1rem;
    padding: 1.5rem;
    margin: 2rem 0;
    position: relative;
    overflow: hidden;
  }

  .cookbook-as-code::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.05) 0%, transparent 70%);
    pointer-events: none;
  }

  .cac-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
    position: relative;
  }

  .cac-icon {
    font-size: 1.75rem;
    line-height: 1;
  }

  .cac-header h4 {
    margin: 0;
    font-size: 1.25rem;
    color: var(--sl-color-text);
  }

  .cac-tech-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-left: auto;
  }

  .tech-tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background: rgba(99, 102, 241, 0.2);
    border-radius: 0.25rem;
    font-weight: 600;
    color: var(--sl-color-text);
  }

  .cac-description {
    margin: 0 0 1.25rem 0;
    opacity: 0.9;
    line-height: 1.6;
    position: relative;
  }

  .code-preview {
    margin: 1rem 0;
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 0.5rem;
    background: rgba(0, 0, 0, 0.02);
    overflow: hidden;
  }

  .preview-toggle {
    padding: 0.75rem 1rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    user-select: none;
    background: rgba(99, 102, 241, 0.05);
    transition: background 0.2s ease;
  }

  .preview-toggle:hover {
    background: rgba(99, 102, 241, 0.1);
  }

  .toggle-icon {
    transition: transform 0.2s ease;
    font-size: 0.85rem;
  }

  .preview-content {
    padding: 1rem;
    animation: slideDown 0.3s ease;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .preview-content pre {
    margin: 0;
    padding: 1rem;
    background: rgba(0, 0, 0, 0.05);
    border-radius: 0.25rem;
    overflow-x: auto;
  }

  .preview-content code {
    font-size: 0.85rem;
    line-height: 1.6;
  }

  .cac-buttons {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .cac-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--sl-color-text);
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .cac-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }

  .cac-button.view {
    background: linear-gradient(135deg, #24292e 0%, #1a1e22 100%);
    color: white;
    border-color: transparent;
  }

  .cac-button.view:hover {
    background: linear-gradient(135deg, #2f363d 0%, #24292e 100%);
  }

  .cac-button.fork {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-color: transparent;
  }

  .cac-button.demo {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    border-color: transparent;
  }

  .cac-button.copy {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    color: white;
    border-color: transparent;
  }

  .button-icon {
    display: inline-flex;
    align-items: center;
    font-size: 1rem;
    line-height: 1;
  }

  @media (max-width: 640px) {
    .cac-tech-tags {
      margin-left: 0;
      width: 100%;
    }

    .cac-buttons {
      flex-direction: column;
    }

    .cac-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
