---
interface Props {
  score: 'high' | 'medium' | 'foundational';
  category?: string;
  description?: string;
}

const { score, category, description } = Astro.props;

const badges = {
  high: {
    icon: 'ðŸŒŸ',
    label: 'High Community Impact',
    color: '#10b981',
    gradient: 'linear-gradient(135deg, #10b981 0%, #059669 100%)'
  },
  medium: {
    icon: 'ðŸ’Ž',
    label: 'Public Good Resource',
    color: '#667eea',
    gradient: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)'
  },
  foundational: {
    icon: 'ðŸŒ±',
    label: 'Community-Serving',
    color: '#8b5cf6',
    gradient: 'linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%)'
  }
};

const badge = badges[score];
---

<div class="greater-good-badge" style={`--badge-gradient: ${badge.gradient}; --badge-color: ${badge.color}`}>
  <div class="badge-header">
    <span class="badge-icon">{badge.icon}</span>
    <span class="badge-label">{badge.label}</span>
    {category && <span class="badge-category">{category}</span>}
  </div>
  {description && (
    <div class="badge-description">
      {description}
    </div>
  )}
  <div class="badge-footer">
    <span class="badge-note">Part of CURATOR HUB's Greater Good Creativity mission</span>
  </div>
</div>

<style>
  .greater-good-badge {
    background: var(--badge-gradient);
    color: white;
    padding: 1.5rem;
    border-radius: 1rem;
    margin: 2rem 0;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .badge-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .badge-icon {
    font-size: 1.75rem;
    line-height: 1;
  }

  .badge-label {
    font-weight: 700;
    font-size: 1.1rem;
    flex: 1;
  }

  .badge-category {
    padding: 0.25rem 0.75rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 1rem;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .badge-description {
    font-size: 0.95rem;
    opacity: 0.95;
    line-height: 1.6;
    margin-bottom: 0.75rem;
  }

  .badge-footer {
    font-size: 0.8rem;
    opacity: 0.8;
    font-style: italic;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }

  .badge-note {
    display: inline-flex;
    align-items: center;
  }
</style>
